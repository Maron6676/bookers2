
            <td><%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image %>
                <% end %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>

            <% if current_user.favorited_by?(book.id) %>
              <td>
                <%= link_to destroy_favorite_path(book), method: :delete, remote: true, class: "text-danger" do %>
                  ♥<%= book.favorites.count %>
                <% end %>
              </td>
              <% else %>
              <td>
                <%= link_to create_favorite_path(book), method: :post, remote: true do %>
                  ♥<%= book.favorites.count %>
                <% end %>
              </td>
            <% end %>
            <td>コメント数：<%= book.book_comments.count %></td>
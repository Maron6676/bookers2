<div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model:@book do |f| %>

    <p><%= f.label :Title %><br>
      <%= f.text_field :title %>
    </p>

    <p><%= f.label :Opinion %><br>
      <%= f.text_area :body %>
    </p>

    <p><%= f.submit 'Create Book', class:"btn btn-success" %>
    </p>

  <% end %>
</div>


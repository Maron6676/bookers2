<div class="container px-5 px-sm-0">
  <% if @book_info.errors.any? %>
  <h3><%= @book_info.errors.count %>error prohibited this obj from being saved:</h3>
    <ul>
       <% @book_info.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
  <% end %>



  <div class="row">
    <%= render'user_info', user_info: @user_info, book_info: @book_info %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>

        <tbody id="book_<%= book.id %>">

          <%= render 'book', book: book %>

        </tbody>
        <% end %>
      </table>

    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <%= render'user_info', user_info: @user_info, book_info: @book_info %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %></td>
            <td><%= @book.body %></td>

            <% if current_user.favorited_by?(@book.id) %>
              <td>
                <%= link_to destroy_favorite_path(@book), method: :delete, class: "text-danger" do %>
                  ♥<%= @book.favorites.count %>
                <% end %>
              </td>
              <% else %>
              <td>
                <%= link_to create_favorite_path(@book), method: :post do %>
                  ♥<%= @book.favorites.count %>
                <% end %>
              </td>
            <% end %>
            <td>コメント数：<%= @book.book_comments.count %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-danger' %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <% @book.book_comments.each do |book_comment| %>
        <div>
          <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
          <%= book_comment.comment %>
            <% if book_comment.user == current_user %>
              <%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %>
            <% end %><br>
            <%= link_to book_comment.user.name, user_path(book_comment.user.id) %>
        </div>
      <% end %>
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5' %><br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>


      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @book.each do |book| %>
      <tr>
        <td><%= book.title %></td>


        <% if current_user.favorited_by?(book.id) %>
          <td><%= link_to 'いいねを外す', destroy_favorite_path(book), method: :DELETE %></td>
        <% else %>
          <td><%= link_to 'いいね', create_favorite_path(book), method: :POST %></td>
        <% end %>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
